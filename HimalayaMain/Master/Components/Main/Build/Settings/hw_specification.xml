                        <motion_profile speed_min="50" speed_max="3000" acc="6000" dec="6000" acc_time="50" dec_time="50" micro_steps="16" ramp_type="1"/>
                    </motion_profiles>
                </functionmodule>
                <functionmodule type="temperature_control" key="temp_rv" name="temp_rv" interface="4">
                    <configuration temp_tolerance="5" sampling_period="200" fan_speed="2950" fan_threshold="295" current_gain="7813" heater_current="600" heater_threshold="300"/>
                    <pid_controllers>
                        <pid_controller max_temperature="130" controller_gain="1212" reset_time="1000" derivative_time="80"/>
                    </pid_controllers>
