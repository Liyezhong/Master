        <device type="OvenDevice" dev_instanceID="0x00008030" optional="1">
            <functionmodules>
                <functionmodule key="phasea3" fct_instanceID="0x1003"/>
                <functionmodule key="phaseb3" fct_instanceID="0x2003"/>
                <functionmodule key="motor_oven_cover" fct_instanceID="0x3003"/>
                <functionmodule key="temp_ctrl_oven" fct_instanceID="0x4003"/>
            </functionmodules>
        </device>

    </devices>
</hwconfig>
