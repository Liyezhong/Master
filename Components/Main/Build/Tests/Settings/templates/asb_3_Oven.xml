            </functionmodules>
        </device>

       <device type="RackTransferDevice" dev_instanceID="0x00008060" optional="1">
            <functionmodules>
                <functionmodule key="motor_rack_transfer" fct_instanceID="0x1002"/>
            </functionmodules>
